<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %> 's Pile Dashboard
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.piles.any? %>
      <h3>Piles (<%= @user.piles.count %>)</h3>
      <ol class="piles">
        <%= render @piles %>

      </ol>
    <% end %>
  </div>
</div>
